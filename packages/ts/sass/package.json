{
	"name": "create-lit-project-sass-ts",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"build:js": "webpack",
		"build:sass": "sass ./src/sass/style.scss:./public/style.css",
		"watch:js": "webpack --watch",
		"watch:sass": "sass --watch ./src/sass/style.scss:./public/style.css",
		"dev": "npm-run-all -p serve watch:sass watch:js",
		"serve": "npx http-server public -c-1 -o / -p 3000"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.0",
		"@babel/core": "^7.16.0",
		"@babel/plugin-proposal-class-properties": "^7.16.0",
		"@babel/plugin-proposal-decorators": "^7.16.4",
		"@babel/plugin-transform-runtime": "^7.16.4",
		"@babel/preset-env": "^7.16.4",
		"babel-loader": "^8.2.3",
		"lit": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"sass": "^1.43.4",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.2",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.5.0"
	}
}
